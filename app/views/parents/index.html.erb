<h1>Listing parents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Firstname</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Street</th>
    <th>Postalcode</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parents.each do |parent| %>
  <tr>
    <td><%= parent.name %></td>
    <td><%= parent.firstname %></td>
    <td><%= parent.email %></td>
    <td><%= parent.phone %></td>
    <td><%= parent.street %></td>
    <td><%= parent.postalcode %></td>
    <td><%= parent.city %></td>
    <td><%= link_to 'Show', parent %></td>
    <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
    <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

